@model Model.EF.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";

}




<div class="main">

    <h1 style="text-align:center; margin-top:50px;font-family: roboto;color:#3d3b3b">Chi tiết sản phẩm</h1>



    <table class="ctsp">
        <tr>

            <td>
                <img src="@Model.img" width="400px" style="padding-right:100px" />
            </td>
            <td>
                <h2>@Model.productName</h2><br />
                
                <h3>@Model.price</h3>      <br />

                
                <h4>Size: 35, 36, 37, 38, 39,30</h4>
                <h3><label for="size">Size:  <input name="size" id="size"></label></h3>


                <select id="single">
                    <option>35</option>
                    <option>36</option>
                    <option>37</option>
                    <option>38</option>
                </select>

                
                <p id="demo1"></p>
            </td>

        </tr>

    </table>


</div>
<script>
    function displayVals() {
        var singleValues = $("#single").val();
         var str = "Thêm vào giỏ hàng";
        var result_1 = str.link("/gio-hang?productId=@Model.productId&size="+singleValues+"&quantity=1");

    document.getElementById("demo1").innerHTML = result_1;
    }
   
    $("#single").change(displayVals);

    displayVals();
    //Bắt sự kiện thi thay đổi giá trị
   
</script>



